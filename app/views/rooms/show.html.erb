<!-- In Rooms Show Page: Cover Photo -->
<div class="row">
  <div class="col-md-12">
    <%= image_tag @room.cover_photo(nil), width: "100%" %>
  </div>
</div>
<br/>

<div class="row">
  <!-- Left Panel -->
  <div class="col-md-8">
    <!-- Listing Name -->
    <div class="row">
      <div class="col-md-8">
        <h1><%= @room.listing_name %></h1>
        <%= @room.address %>
      </div>
      <div class="col-md-4 text-center">
        <%= image_tag avatar_url(@room.user), class: "img-circle avatar_large" %><br/><br/>
        <%= @room.user.fullname %>
      </div>
    </div>
    <hr/>

    <!-- Room Info -->
    <div class="row">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
          <i class="fa fa-home fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-user-circle-o fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bed fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bath fa-2x"></i>
        </div>
      </div>

      <div class="row text-center">
        <div class="col-md-3"><%= @room.home_type %></div>
        <div class="col-md-3"><%= @room.accommodate %></div>
        <div class="col-md-3"><%= @room.bed_room %></div>
        <div class="col-md-3"><%= @room.bath_room %></div>
      </div>
    </div>
    <hr/>

    <!-- About the Room -->
    <div class="row">
      About the room
    </div>
    <hr/>

    <!-- Amenities -->
    <div class="row">
      Amenities
    </div>
    <hr/>

    <!-- Carousel - Photos -->
    <div class="row">
      photo
    </div>
    <hr/>
  </div>

  <!-- Right Panel -->
  <div class="col-md-4">
    <!-- Reservation Form -->
  </div>
</div>
